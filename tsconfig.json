{
  "compilerOptions": {
    "allowJs": true,
    "module": "es2020",
    "target": "es2020",
    "outDir": "dist",
    "moduleResolution": "node",
    "isolatedModules": false,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}